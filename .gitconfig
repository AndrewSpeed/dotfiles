	name = Andrew Speed
	email = andrew.cspeed@gmail.com
[alias]
	st = status
	co = checkout
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[core]
	editor = vim
[push]
	default = simple
[color]
	ui = true
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
